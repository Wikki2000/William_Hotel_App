<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Room Services - Manage Your Accommodations</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Explore our room services and manage reservations efficiently. From deluxe to standard rooms, ensure a pleasant stay with complementary breakfast and top-notch amenities."
      />

    <!-- Link Font-Is-Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Link Public CSS Files-->
    <link rel="stylesheet" type="text/css" href="/static/css/public/index.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/public/fonts.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/public/styles.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/public/components.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/public/side_nav.css" />


    <link rel="stylesheet" type="text/css" href="/static/css/staff_dashboard/order.css" />

    <!-- Link Staff_dashboard CSS Files-->
    <link rel="stylesheet" type="text/css" href="/static/css/public/header.css" />
    <link rel="icon" type="image/x-icon" href="/static/images/public/hotel_logo.png" />

    <!-- Link Staff_dashboard JS Files-->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="module" defer src="/static/js/staff_dashboard/room_service.js"></script>
    <script type="module" defer src="/static/js/staff_dashboard/app.js"></script>
    <script type="module" defer src="/static/js/staff_dashboard/main_dashboard.js"></script>
    <script type="module" defer src="/static/js/staff_dashboard/restaurant.js"></script>
    <script type="module" defer src="/static/js/staff_dashboard/order.js"></script>

  </head>
  <body>
    <!-- main content section -->
    <div class="container">
      <div class="row">
        <!-- sidebar navigation section -->
        <aside class="sidebar">
          <div class="sidebar__logo-row">
            <img src="/static/images/public/hotel_logo.png" alt="Hotel Logo" class="sidebar__logo" />
          </div>
          <ul class="sidebar__menu">
            <li id="sidebar__main" class="highlight-sidebar sidebar__nav-icon">
              <a>
                <img src="/static/images/public/dashboard_icon.png" alt="Dashboard Icon" class="sidebar__icon--dashboard" />
                <span> Dashboard</span>
              </a>
            </li>
            <li id="sidebar__Room-service" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/staff_dashboard/room_services_icon.png" alt="Services Icon" class="sidebar__icon--services" />
                <span> Room & Services </span>
              </a>
            </li>
            <li id="sidebar__reservations" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/staff_dashboard/reservations_icon.png" alt="Reservations Icon" class="sidebar__icon--services" />
                <span> Reservations</span>
              </a>
            </li>
            <li id="sidebar__guest" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/staff_dashboard/guests_icon.png" alt="Guests Icon" class="sidebar__icon--guests" />
                <span> Guests </span>
              </a>
            </li>
            <li id="sidebar__restaurant" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/staff_dashboard/restaurant_icon.png" alt="Restaurant Icon" class="sidebar__icon--services" />
                <span> Restaurant </span>
              </a>
            </li>
            <li id="sidebar__order" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/staff_dashboard/orders_icon.png" alt="Orders Icon" class="sidebar__icon--orders" />
                <div>
                  <span>Orders</span>&nbsp;&nbsp;&nbsp;&nbsp;
                  <span id="sidebar__order-count"><!-- The count of cart items will be display here -->5</span>
                </div>
              </a>
            </li>
            <li id="sidebar__help" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/public/help_icon.png" alt="Help Icon" class="sidebar__icon--services" />
                <span> Help</span>
              </a>
            </li>
            <li id="sidebar__logout" class="sidebar__nav-icon">
              <a>
                <img src="/static/images/public/logout_icon.png" alt="Logout Icon" class="sidebar__icon--services" />
                <span> Logout </span>
              </a>
            </li>
          </ul>
          <div class="sidebar__profile-row">
            <img src="/static/images/public/profile_photo_placeholder.png" alt="Profile Image" class="sidebar__profile-image" />
            <div class="sidebar__staff-profile">
              <div class="sidebar__name-column">
                <h5 id="sidebar__name" class="sidebar__name ui heading size-headingmd"><!--Name will be dynamically be loaded--></h5>
                <h6 id="sidebar__email" class="ui text size-textxs"><!--Dynamically load email--></h6>
              </div>
              <img
                src="/static/images/public/vertical3colons.png"
                alt="Notifications Icon"
                class="sidebar__icon--notifications"
                />
            </div>
          </div>
        </aside>
        <!-- side navigation bars ends here -->

        <div class="column_two">
          <!-- search and tabs section -->
          <div class="columnsearch">
            <!-- search header section -->
            <header class="header">
              <div class="header__search-row">
                <label class="header__search-input">
                  <img src="/static/images/public/serarch_icon.png" alt="Rewind" class="rewind" />
                  <input name="Search Input" placeholder="All Rooms" type="text" />
                </label>
                <div class="header__icon-row">
                  <a href="#">
                    <span class="header__menu-icon">
                      <img src="/static/images/public/message_icon.svg" />
                      <span>2</span>
                    </span>
                  </a>
                  <a href="#">
                    <button class="header__menu-icon">
                      <img src="/static/images/public/notification.png" />
                      <span>3</span>
                    </button>
                  </a>
                  <a href="#">
                    <button class="header__menu-icon">
                      <img src="/static/images/public/img_arrow_down_black_900_01.svg" />
                    </button>
                  </a>
                  <a href="#">
                    <button class="header__upload-icon">
                      <img src="/static/images/public/tab_icon.png"
                           alt="hide-sidebar" />
                    </button>
                  </a>
                </div>
              </div>
            </header>

            <section id="dynamic__load-dashboard">
              <div class="order__dashboard-section">
                <div class="order__categories-btn">
                  <button id="order__items" class="order__selector highlight-btn filter">Ordered Items</button>
                  <button id="order__history" class="order__selector filter">Order History</button>
                </div>


                 <div id="order__items-section">

                  <div class="oder__items-list">
                    <div class="oder__first-col">

                      <div class="order__items--list-content">
                        <img
                          src="/static/images/public/hotel_logo.png"
                          alt="Image of CART Item" class="order__items-img"
                                                   />
                        <div>
                          <h3 class="order__item-title">Rice & Stews</h3>
                          <p class="order__item-orice">Price: ₦25,000</p>

                          <div class="order__action-icon">
                            <p><i class="fa fa-trash"></i></p>

                            <div class="order__counter">
                              <button class="order__count-btn" id="order__btn-decrease">-</button>
                              <span class="order__counter-value">6</span>
                              <button class="order__count-btn" id="order__btn-increase">+</button>
                            </div>
                          </div>
                        </div>
                      </div>



                    </div>

                    <div class="oder__second-col">
                      <h1>Order Details</h1>
                      <form id="order__form">
                        <div class="order__flex">
                          <div class="order__content">
                            <p><strong>Guest Type</strong></p>
                            <div class="dropdown">
                              <div id="order__guest-type"class="order__dropdown-btn drop-down">
                                <span>Select </span>
                                <img src="/static/images/public/img_arrow_down_black_900_01.svg" width="15px" alt="dropdown" />
                              </div>
                              <div id="order__guest--type-dropdown" class="dropdown-menu">
                                <ul class="order__dropdown--menu-list">
                                  <li class="order__dropdown-selector dropdown-item">Walk In</li>
                                  <li class="order__dropdown-selector dropdown-item">Lodged</li>
                                </ul>
                              </div>
                            </div>
                          </div>

                          <div class="order__content">
                            <p><strong>Guest Name</strong></p>
                            <input>
                          </div>
                        </div>

                        <div class="order__flex">
                          <div class="order__content">
                            <p><strong>Instance Payment</strong></p>
                            <div class="dropdown">
                              <div id="order__ispaid" class="order__dropdown-btn drop-down">
                                <span>Select </span>
                                <img src="/static/images/public/img_arrow_down_black_900_01.svg" width="15px" alt="dropdown" />
                              </div>
                              <div class="dropdown-menu" id="order__ispaid-dropdown">
                                <ul class="order__dropdown--menu-list">
                                  <li class="order__dropdown-selector dropdown-item">Yes</li>
                                  <li class="order__dropdown-selector dropdown-item">No</li>
                                </ul>
                              </div>
                            </div>
                          </div>

                          <div class="order__content">
                            <p><strong>Payment Type</strong></p>
                            <div class="dropdown">
                              <div id="order__payment-type" class="order__dropdown-btn drop-down">
                                <span>Select </span>
                                <img src="/static/images/public/img_arrow_down_black_900_01.svg" width="15px" alt="dropdown" />
                              </div>
                              <div id="order__payment--type-dropwdown" class="dropdown-menu">
                                <ul class="order__dropdown--menu-list">
                                  <li class="order__dropdown-selector dropdown-item">Transfer</li>
                                  <li class="order__dropdown-selector dropdown-item">POS</li>
                                  <li class="order__dropdown-selector dropdown-item">Cash</li>
                                </ul>
                              </div>
                            </div>
                          </div>
                        </div>
                        <button class="highlight-btn">Order</button>

                        <!-- Stores option selected from menu to submit with form -->
                        <input id="order__guest--type-val" type="hidden" />
                        <input id="order__ispaid-val" type="hidden" />
                        <input id="order__payment--type-val" type="hidden" />
                      </form>
                    </div>

                  </div>
                </div>

                <div id="order__history-section">
                  <div class="order__history--filter-btns">
                    <button id="order__filter-all" class="order__filter filter"><em><strong>All History</em></strong></button>
                    <button id="order__filter-pending" class="order__filter filter"><em><strong>Pending</strong></em></button>
                    <button id="order__filter-paid" class="order__filter filter"><em><strong>Paid</strong></em></button>
                  </div>

                  <!-- Guest table section -->
                  <div class="table-column order__history-table">
                    <table id="order__table" cellpadding="0" cellspacing="0" class="tabletype ui table size-xs">
                      <thead>
                        <tr>
                          <th width="348px">
                            <p class="table__header-cell ui heading size-headings">Customer<br /><br /></p>
                          </th>
                          <th width="348px">
                            <p class="table__header-cell ui heading size-headings">Purchase Date<br /><br /></p>
                          </th>
                          <th width="348px">
                            <p class="table__header-cell ui heading size-headings">Payment Status<br /><br /></p>
                          </th>
                          <th width="348px">
                            <p class="table__header-cell ui heading size-headings">Amount Paid<br /><br /></p>
                          </th>
                          <th width="348px">
                            <p class="table__header-cell ui heading size-headings"><br /><br /></p>
                          </th>
                        </tr>
                      </thead>
                      <tbody class="order__history--table-body">
                        <tr>
                          <td>
                            <p class="ui text size-textmd">₦${room.amount}</p>
                          </td>
                          <td>
                            <p class="ui text size-textmd">₦${room.amount}</p>
                          </td>
                          <td>
                            <p class="ui text size-textmd">₦${room.amount}</p>
                          </td>
                          <td>
                            <p class="ui text size-textmd">₦${room.amount}</p>
                          </td>
                          <td>
                            <p class="ui text size-textmd">See Order Details</p>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>

              </div>
            </section>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
